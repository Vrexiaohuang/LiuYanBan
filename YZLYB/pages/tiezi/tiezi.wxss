/* pages/tiezi/tiezi.wxss */
.box{

}

.block{
  width: 100%;
  min-height: 300rpx;
  display: flex;
  box-shadow:0rpx 0rpx 15rpx 0rpx rgb(196, 196, 196);
}

.block-left{
  display: flex;
  width: 20%;
  align-items: center;
  flex-direction: column;
}

.block-right{
  display: flex;
  width: 80%;
  padding-left: 35rpx;
  padding-right: 20rpx;
  padding-bottom: 40rpx;
  flex-direction: column;
}

.avatar{
  margin-top: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow:0rpx 0rpx 15rpx 0rpx rgb(37, 37, 37);
}

.nickName{
  margin-top: 20rpx;
  font-size: 23rpx;
  width: 80%;
  text-align: center;
  text-shadow: 0rpx 0rpx 8rpx rgb(219, 219, 219);
}

.title{
  margin-top: 40rpx;
  font-size: 45rpx;
  /*text-shadow:0rpx 0rpx 15rpx 0rpx rgb(37, 37, 37);*/
  text-shadow: 0rpx 0rpx 8rpx rgb(226, 226, 226);
}

.content{
  margin-top: 20rpx;
  text-shadow: 0rpx 0rpx 8rpx rgb(231, 231, 231);
}

.date{
  font-size: 26rpx;
  margin-top: 20rpx;
  color: gray;
  
}

.images{
  margin-top: 40rpx;
  display: flex;
  flex-wrap:wrap;
}

.image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  box-shadow:0rpx 0rpx 15rpx 0rpx rgb(214, 214, 214);
  border-radius: 10rpx;
}

.bottom-reply{
  width: 100%;
  position: fixed;
  display: flex;
  bottom: 0px;
  /*border:1px solid #1cbbfa;*/
  box-shadow:0rpx 0rpx 15rpx 0rpx rgb(214, 214, 214);
}

.bottom-form{
  width: 100%;
  display:flex;
  flex-direction: row;

}

.bottom-form input{
  width: 70%;
  height: 100%;
  padding: 20rpx;
}

.bottom-form button{
  width: 30%;
  color: white;
  border-radius: 0px;
  background-color: #1cbbfa;
}
